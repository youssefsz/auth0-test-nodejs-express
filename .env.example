# Auth0 Configuration
# Replace these values with your actual Auth0 application credentials

# Secret key for session encryption (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
AUTH0_SECRET=your-long-random-secret-string-here

# Your application's base URL
AUTH0_BASE_URL=http://localhost:3000

# Your Auth0 application Client ID (found in Auth0 Dashboard > Applications > Your App > Settings)
AUTH0_CLIENT_ID=your-auth0-client-id-here

# Your Auth0 domain (format: https://your-domain.auth0.com)
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (optional)
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
